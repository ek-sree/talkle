{
  "compilerOptions": {
    "module": "ESNext",  
    "moduleResolution": "Node", 
    "target": "ESNext", 
    "esModuleInterop": true,  
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",  
    "paths": {
      "*": ["node_modules/*"]  
    }
  },
  "include": ["src/**/*"]
}
